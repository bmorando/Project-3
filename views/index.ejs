<!DOCTYPE html>
<html>
<head>
  <$- include('./partials/head') $>
</head>
<body >
<$- include('./partials/navbar') $>
<div class="center-align">

  <div class="container join">
    <$ if (user && !user.currentGame) { $>

      <div class="row">
        <form id="create-game" action="/api/games" method="post">
          <button type="submit" class="waves-effect waves-light btn-large">Create Game</button>
        </form>
      </div>

      <div class="row">
        <form action="/api/games/join" method="post">
          <label for="search">Join A Game</label>
          <input id="join-game" type="text" name="gameId" placeholder="">
          <input type="submit" value="join">
        </form>
      </div>

    <$ } else if(user && user.currentGame) { $>


    <div class="row">
      <div class="col s12 m8 push-m2">
        <div class="card">
          <a href="/api/games/<$= user.currentGame $>" class="waves-effect waves-light btn-large">Continue Game</a>
        </div>
      </div>
    </div>
      <div class="divider"></div>
    <div class="row">
      <div class="col s12 m8 push-m2">
        <div class= "card">
          <div class="row">
            <a href="/users/leavegame" class="waves-effect waves-light btn-large">Leave Game</a>
          </div>
        </div>
     </div>
    </div>
      <$ } $>
  </div>
</div>

</body>
</html>

